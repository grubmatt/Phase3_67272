<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :store_id %><br>
    <%= f.collection_select :store_id, Store.active.alphabetical, :id, :name, :prompt => "Select Store" %>
  </div>
  <div class="field">
    <%= f.label :employee_id %><br>
    <%= f.collection_select :employee_id, Employee.active.alphabetical, :id, :name, :prompt => "Select Employee" %>  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :pay_level %><br>
    <%= f.select(:pay_level, ['1','2','3','4','5','6']) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
