<p id="notice"><%= notice %></p>

<h1>Current Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Pay</th>
      <th>Start Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_assignments.each do |assignment| %>
      <tr>
        <td><%= link_to "#{assignment.store.name}", assignment.store %></td>
        <td><%= link_to "#{assignment.employee.name}", assignment.employee %></td>
        <td><%= assignment.pay_level %></td>
        <td><%= assignment.start_date %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Add the pagination using will_paginate gem -->
<span class="smtext">
<%= will_paginate @current_assignments, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
</span>

