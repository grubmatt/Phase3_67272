<p id="notice"><%= notice %></p>

<h1>Current Stores</h1>

<table>
  <thead>
    <tr>
      <th>Store Name</th>
      <th>Store Phone</th>
      <th>Staff Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to "#{store.name}", store %></td>
        <td><%= number_to_phone(store.phone) %></td>
        <td><%= store.staff_count %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Add the pagination using will_paginate gem -->
<span class="smtext">
<%= will_paginate @stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
</span>

<br>

<%= link_to 'New Store', new_store_path %>
